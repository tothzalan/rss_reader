<div class="card">
    <div class="card-header">@Title</div>
    <div class="card-body">
        @Description
        <a href="@Link" target="_blank">Open -></a>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "";
    [Parameter]
    public string Description { get; set; } = "";
    [Parameter]
    public string Link { get; set; } = "";
}
